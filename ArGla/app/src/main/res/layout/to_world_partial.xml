<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/toWorld"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendInfo"
        android:layout_below="@id/userTitle"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/userFeelingWorld"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:hint="I'm feeling... "/>

        <Button
            android:id="@+id/sendToWorld"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/neutralButton"
            android:text="Send"
            android:background="@drawable/clear_button_when_actions"
            android:textColor="#fff"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendInfo">

        <include layout="@layout/list_view_partial" />

    </LinearLayout>

</RelativeLayout>